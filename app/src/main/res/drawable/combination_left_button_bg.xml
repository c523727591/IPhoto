<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_pressed_color" />
                    <corners
                        android:topLeftRadius="@dimen/combination_button_corner_radius"
                        android:topRightRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:bottomLeftRadius="@dimen/combination_button_corner_radius" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_stroke_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_selected_color" />
                    <corners
                        android:topLeftRadius="@dimen/combination_button_corner_radius"
                        android:topRightRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:bottomLeftRadius="@dimen/combination_button_corner_radius" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_stroke_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_normal_color" />
                    <corners
                        android:topLeftRadius="@dimen/combination_button_corner_radius"
                        android:topRightRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:bottomLeftRadius="@dimen/combination_button_corner_radius" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_stroke_color" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>