<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_pressed_color" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_stroke_color" />
                </shape>
            </item>
            <item
                android:left="0dp"
                android:top="@dimen/combination_button_stroke_width"
                android:right="@dimen/combination_button_stroke_width"
                android:bottom="@dimen/combination_button_stroke_width">
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_pressed_color" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_solid_pressed_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_selected_color" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_stroke_color" />
                </shape>
            </item>
            <item
                android:left="0dp"
                android:top="@dimen/combination_button_stroke_width"
                android:right="@dimen/combination_button_stroke_width"
                android:bottom="@dimen/combination_button_stroke_width">
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_selected_color" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_solid_selected_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_normal_color" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_stroke_color" />
                </shape>
            </item>
            <item
                android:left="0dp"
                android:top="@dimen/combination_button_stroke_width"
                android:right="@dimen/combination_button_stroke_width"
                android:bottom="@dimen/combination_button_stroke_width">
                <shape android:shape="rectangle">
                    <solid android:color="@color/combination_button_solid_normal_color" />
                    <stroke
                        android:width="@dimen/combination_button_stroke_width"
                        android:color="@color/combination_button_solid_normal_color" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>