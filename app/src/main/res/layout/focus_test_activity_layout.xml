<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/focus_test_view_group1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/focus_test_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_text_ok"/>

        <Button
            android:id="@+id/focus_test_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_text_cancel"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/focus_test_view_group2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/focus_test_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_text_confirm"/>

        <TextView
            android:id="@+id/focus_test_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>